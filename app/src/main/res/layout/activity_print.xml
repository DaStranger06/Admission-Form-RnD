            android:layout_height="match_parent"
            android:src="@drawable/aka"

            ></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Akatsuki Clan"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Hidden mist village"
                android:textSize="13dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="no need of number"
                android:textSize="13dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="we will find you"
                android:textSize="13dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <ImageView
            android:layout_width="115dp"
            android:layout_height="109dp"
            android:src="@drawable/adm"

            ></ImageView>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/teal_700"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:dividerPadding="8dp">

        <TextView
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtname1"
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="italic"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:dividerPadding="8dp">

        <TextView
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Village:"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtvil1"
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="italic"></TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:dividerPadding="8dp">

        <TextView
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Date of Birth:"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtdob"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="italic"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:dividerPadding="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="109dp"
            android:layout_height="72dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Gender :"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="bold"></TextView>

        <TextView
